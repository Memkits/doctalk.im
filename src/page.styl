
*
  box-sizing border-box
  -moz-box-sizing border-box

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,80)
  border-radius 2px

body
  margin 0px
  height 10px
  font-size 14px
  font-family Ubuntu
  width 2000px
  // overflow hidden

input
  border none
  outline none
  box-shadow 0px 0px 8px hsl(0,0,70)
  padding 4px 8px

#clock
  position absolute
  top 60px
  left 70px
  font-size 60px
  color hsl(240,50,94)

#msg
  position absolute
  top 140px
  left 70px
  width 300px
  white-space nowrap
  overflow hidden

  .error
    background hsl(0,0,95)
    margin 6px 0px
    padding 4px

    .err-name
      color red
      margin-right 8px
      line-height 20px

#setting
  position fixed
  right 0px
  height 100%
  width 40px
  background hsl(0,0,93)
  padding 40px
  box-shadow -4px 0px 8px white

  .item
    margin 10px 0px
    white-space nowrap

    span
      width 70px
      display inline-block

  #avatar
    width 200px
    height 200px
    margin-top 20px

  #toggle
    color hsl(240,90,80)
    cursor pointer

    &:hover
      color blue

#page
  background hsl(0,0,90)
  position absolute
  height 100%
  width 1400px
  left 400px
  margin-right 800px

  #posts, #topic
    width 50%
    height 100%
    position relative
    float left

  #posts
    background hsl(0,0,97)

    #show
      height 100%
      width 100%

    #type
      height 20px
      position absolute
      bottom 0px
      width 100%
      background hsl(0,0,80)
      
  #show, #inside
    padding-top 50px
    padding-bottom 400px
    overflow-x hidden
    overflow-y scroll
    background hsl(240,40,98)

  .unit
    padding 4px 5px

    &:nth-child(2n)
      background hsl(240,40,99)
    &:nth-child(2n+1)
      background hsl(240,40,97)

    .text, .avatar
      vertical-align middle

    span
      margin-left 12px
      white-space nowrap

    .avatar
      width 34px
      height 34px
      box-shadow 0px 0px 4px gray

  .unit.joined
    font-weight bold

  #topic
    background hsl(0,0,90)

    #inside
      width 100%
      height 100%

    #add
      position absolute
      bottom 0px
      right 0px
      width 40px
      height 30px
      text-align center
      vertical-align middle
      background hsl(0,0,97)
      font-size 24px
      box-shadow -2px -2px 6px gray
      border-radius 10px 0px 0px 0px
      color gray

      #create
        position absolute
        width 700px
        top 0px
        right 0px
        display none

      span
        display inline-block